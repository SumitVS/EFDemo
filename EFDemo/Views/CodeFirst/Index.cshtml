@model IEnumerable<EFDemo.Models.Code_First.Department>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table>
    <thead>
        <tr>
            <th>
               ID
            </th>

            <th>
               Name
            </th>

            <th>
                Location
            </th>


            <th>
                Details
            </th>

        </tr>
    </thead>

   <tbody>
       @foreach (var item in Model)
       {
       <tr>
           <td>@item.Id</td>
           <td>@item.Name</td>
           <td>@item.Location</td>


           <td>
               <table>
               <thead>
                   <tr>
                       <th>
                          ID
                       </th>
                       <th>
                           First Name
                       </th>
                       <th>
                           Last Name
                       </th>
                       <th>
                           Gender
                       </th>
                       <th>
                           Salary
                       </th>
                       <th>
                           Department ID
                       </th>
                   </tr>
               </thead>
                   @foreach (var emp in item.Employees)
                   {
               <tr>
                   <td>
                       @emp.Id
                   </td>
                   <td>
                       @emp.FirstName
                   </td>
                   <td>
                       @emp.LastName
                   </td>
                   <td>
                       @emp.Gender
                   </td>
                   <td>
                       @emp.Salary
                   </td>
                   <td>
                       @item.Id
                   </td>
               </tr>
                   }
               </table>
           
           </td>
       </tr>
       }
   </tbody>
   
</table>

